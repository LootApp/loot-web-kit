{
  "name": "loot-web-kit",
  "version": "0.0.1",
  "description": "Set of UI components used at loot.io front-end team",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "css",
    "es",
    "lib",
    "umd"
  ],
  "scripts": {
    "build": "nwb build-react-component; rm -rf docs/*; cp -R demo/dist/* docs",
